pipeline {
	agent { docker { image 'golang' } }

	environment {
		APP_DEBUG   = 'true'
		DB_ENGINE   = 'mysql'
	}
	
	stages {
		stage('dependencies') {
			steps {
				sh 'echo "Fetching dependencies :"'
				sh 'echo "  Getting dep"'
				sh 'apk add dep'
				
			}
		}
		stage('app') {
			steps {
				sh 'echo "Go build :"'
				sh 'go get -d -v github.com/MuchChaca/JenkinsTest'
				
			}
		}
		stage('build') {
			steps {
				sh 'echo "Go build :"'
				sh 'cd $GOPATH/src/github.com/MuchChaca/JenkinsTest'
				sh 'go build hello.go'
			}
		}
		stage('envs') {
			steps {
				sh 'echo "*********  ENV VARIABLES  "*********'
				sh 'echo "APP_DEBUG :" $APP_DEBUG'
				sh 'echo "DB_ENGINE :" $DB_ENGINE'
			}
		}
		stage('dep') {
			steps {
				sh 'echo "Running dep : "'
				sh '$GOBIN/dep ensure -update'
			}
		}
		stage('tests') {
			steps {
				sh 'echo "Tests : "'
				sh 'go test -v -race ./...'
			}
		}
	}

	post {
		always {
			echo 'This will always run'
		}
		success {
			sh 'echo "SUCCESS"'
			echo 'This will run only if successful'
		}
		failure {
			echo 'This will run only if failed'
		}
		unstable {
			echo 'This will run only if the run was marked as unstable'
		}
		changed {
			echo 'This will run only if the state of the Pipeline has changed'
			echo 'For example, if the Pipeline was previously failing but is now successful'
		}
	}
}